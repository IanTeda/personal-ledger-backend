{
  "name": "Personal Ledger Backend",
  "image": "mcr.microsoft.com/devcontainers/rust:1-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:1": {}
  },
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
  ],
  "postCreateCommand": "cargo install mdbook cargo-make cargo-watch cargo-audit && rustup component add clippy rustfmt && sudo apt-get update && sudo apt-get install -y protobuf-compiler libprotobuf-dev",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-markdownlint",
        "redhat.vscode-yaml",
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "usernamehw.errorlens",
        "vadimcn.vscode-lldb",
        "gruntfuggly.todo-tree",
        "github.copilot",
        "ms-azuretools.vscode-docker",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
      ]
    }
  },
  "forwardPorts": [8001],
  "portsAttributes": {
    "8001": {
      "label": "mdBook Server"
    }
  },
  "remoteUser": "vscode"
}
